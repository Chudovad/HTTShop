﻿@{
    ViewData["Title"] = "Categories";
    @model IEnumerable<HTTShop.Models.Category>;
}

<div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <a asp-action="Details" asp-route-id="@item.Id"><h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5></a>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>